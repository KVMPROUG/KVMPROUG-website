function getYouTubeId(url) {
  const regex = /(?:youtu\.be\/|youtube\.com\/(?:watch\?(?:.*&)?v=|embed\/|v\/))([^?&"'>]+)/;
  const match = url.match(regex);
  return match ? match[1] : null;
}
